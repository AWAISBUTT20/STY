<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_marginBottom="@android:dimen/app_icon_size"
    tools:context=".search"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2.25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10.32dp"
            android:background="@color/black"
            android:layout_centerHorizontal="true"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2.25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="102.32dp"
            android:background="@color/black"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:id="@+id/checkout"
            android:layout_width="match_parent"
            android:layout_height="35.58dp"
            android:layout_marginStart="75.58dp"
            android:layout_marginTop="49.75dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="19sp"
            android:layout_centerHorizontal="true"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:translationY="-9.47sp" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:elevation="15dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/grey"
                    android:background="@drawable/search"
                    >
                </ImageView>

                <EditText
                    android:id="@+id/editxtsearch"
                    android:layout_marginStart="45dp"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:hint="@string/Search"
                    android:textSize="20sp"
                    android:textColorHint="@color/grey"
                    android:backgroundTint="@color/black"
                    >
                </EditText>
                <Button
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="320dp"
                    android:foreground="@drawable/filter"
                    >
                </Button>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtalsolike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="121dp"
                android:text="You May Also Like"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="italic">

            </TextView>
            <View
                android:id="@+id/some_id"
                android:layout_width="124.96dp"
                android:layout_height="2.25dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="162.32dp"
                android:background="@color/black"
                android:layout_centerHorizontal="true"

                />
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rvsearch"
                android:layout_alignTop="@+id/some_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@android:dimen/app_icon_size"
                android:orientation="vertical">

            </androidx.recyclerview.widget.RecyclerView>
